<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true" 
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/study_img_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" 
         
        android:orientation="vertical" >
        
        <FrameLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        
        <ImageView 
	        android:id="@+id/study_img"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"/>
         <ImageView 
                 android:id="@+id/study_exit_img1"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_gravity="right" 
	            android:src="@drawable/exit"/>
        
        </FrameLayout>
        
    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/study_vodeo_frame" 
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="fill_parent">
        
        <LinearLayout 
	        android:id="@+id/study_video_view"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:gravity="center"
	        android:orientation="vertical"> 
		        <VideoView 
			        android:id="@+id/study_video"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
	        
	    </LinearLayout>
	    
        <LinearLayout 
	        android:id="@+id/study_video_control"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" 
	        android:orientation="vertical">
		    
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal"> 
                <TextView 
                    android:id="@+id/study_video_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:textColor="#ffffff"
                    android:text="视频说明"/> 
            </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="100dp" 
                android:orientation="horizontal">
                
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" 
                    android:orientation="horizontal">
                     <ImageView 
	                    android:id="@+id/study_video_prev"
	                    android:layout_width="50dp"
	                    android:layout_height="50dp" 
	                    android:layout_marginLeft="60dp"
	                    android:src="@drawable/music_prev"/>
                </LinearLayout>
                
                 <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" 
                    android:gravity="center"
                    android:orientation="horizontal">
                     <ImageView
	                    android:id="@+id/study_video_play"
	                    android:layout_width="50dp"
	                    android:layout_height="50dp"
	                    android:layout_gravity="center"
	                    android:src="@drawable/music_play" />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" 
                    android:gravity="right" 
                    android:orientation="horizontal">
                     <ImageView
	                    android:id="@+id/study_video_next"
	                    android:layout_width="50dp"
	                    android:layout_height="50dp" 
	                    android:layout_marginRight="60dp"
	                    android:src="@drawable/music_next" />
                </LinearLayout>
                
            </LinearLayout> 
		</LinearLayout>
		
         <ImageView 
                android:id="@+id/study_exit_img2"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_gravity="right" 
	            android:src="@drawable/exit"/>
        
    </FrameLayout>
     
</LinearLayout>

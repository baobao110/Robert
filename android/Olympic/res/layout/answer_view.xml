<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
	        android:id="@+id/answer_view_question"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:textSize="16dp"
	        android:layout_marginBottom="10dp"
	        android:text="1.题目内容"/>
        <TextView 
	        android:id="@+id/answer_view_a"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/ivory"
	        android:textSize="14dp"
	        android:layout_marginBottom="5dp"
	        android:text="A.答案"/>
        <TextView 
	        android:id="@+id/answer_view_b"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/ivory"
	        android:textSize="14dp"
	        android:layout_marginBottom="5dp"
	        android:text="B.答案"/>
        <TextView 
	        android:id="@+id/answer_view_c"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/ivory"
	        android:textSize="14dp"
	        android:layout_marginBottom="5dp"
	        android:text="C.答案"/>
        <TextView 
	        android:id="@+id/answer_view_d"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/ivory"
	        android:textSize="14dp"
	        android:layout_marginBottom="5dp"
	        android:text="D.答案"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/answer_view_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:text="回答：A"/>
        
        <TextView 
            android:id="@+id/answer_view_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="32dp"
            android:layout_marginLeft="30dp"
            android:text="×"/>
        <TextView 
            android:id="@+id/answer_view_realy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:text="正确答案：B"/>
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/answer_view_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/ivory"
            android:text="说明：2221321312"/>
        
    </LinearLayout>
    
    
    

</LinearLayout>
